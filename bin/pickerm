#!/bin/sh
# Gives an interactive menu to select text from a file and copies it to the
# clipboard

# Choose file from arg or default to emoji
[ -z "$1" ] && file="$HOME/.local/etc/emoji" || file="$HOME/.local/etc/$1"
# Quit if file doesn't exist
[ -f "$file" ] || exit 1


choose=$(cut -d ';' -f1 "$file" | wofi -d -i -L 10 | sed "s/\t.*//")

[ -z "$choose" ] && exit

printf "%s" "$choose" | wl-copy && notify-send "$choose" 'Simbol copiat.'
